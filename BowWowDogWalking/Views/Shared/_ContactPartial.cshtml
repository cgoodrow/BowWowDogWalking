@model BowWowDogWalking.Models.EmailFormModel

@{

    ViewBag.Title = "Contact Me";
}

<hr />
<div class="col-xs-12 col-sm-6 col-md-5 col-md-push-6 col-lg-5 col-lg-push-6">
    <h2>Schedule a Appointment</h2>
    <p>Phone: (810) 705-4591</p>
    <h4><u>Hours</u></h4>
    <ul>
        <li class="no-bullets">
            Monday - Friday
            <ul>
                <li>9<sup>am</sup> - 5<sup>pm</sup></li>
            </ul>
        </li>
        <li class="no-bullets">
            Saturday
            <ul><li>10<sup>am</sup> - 5<sup>pm</sup></li></ul>
        </li>
    </ul>
</div>
<div class="col-xs-12 col-sm-6 col-md-5 col-md-pull-4 col-lg-5 col-lg-pull-4">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("_ContactPartial", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Phone, new { @class = "form-control", required = "required", placeholder = "xxx-xxx-xxxx" })<br />
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ScheduleDate, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.ScheduleDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ScheduleDate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-md-push-2">
                    @Html.LabelFor(m => m.SixtyMin, new { @class = "control-label" })

                    @Html.CheckBox("SixtyMin", false)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.ThirtyMin, new { @class = "control-label" })

                    @Html.CheckBox("ThirtyMin", false)
                </div>
                <div class="col-md-6 col-md-push-2">
                    <p id="error-message"><p />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default submit" value="Send" />
                </div>

            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
